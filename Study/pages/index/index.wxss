/**index.wxss**/
.container {
  background-color: #f1f5f7;
}
.slide-image {
  width: 100%;
  height: 100%;
}
.notice {
  display: flex;
  width: 100%;
  height: 60rpx;
  flex-wrap: nowrap;
  background-color: #ffffff;
  margin-top: 15rpx;
}
.notice-img {
  width: 5%;
  height: 80%;
  margin: 10rpx 0 10rpx 10rpx;
}
.notice-title {
  width: 20%;
  height: 50%;
  font-size: 16px;
  white-space: nowrap;
  margin: 18rpx 0rpx 10rpx 5rpx;
}
.notice-content {
  width: 75%;
  height: 50%;
  font-size: 16px;
  margin: 18rpx 0rpx 10rpx 5rpx;
  text-overflow: ellipsis;
  overflow: hidden;
  white-space: nowrap;
}

.list {
  width: 100%;
  height: 100%;
  background-color: #ffffff;
}
.list-item {
  display: flex;
  flex-wrap: nowrap;
  align-items: center;
  width: 100%;
  height: 100%;
}
.list-item-img {
  width: 35%;
  height: 180rpx;
  margin: 10rpx 5rpx 10rpx 10rpx;
}
.list-item-right {
  display: flex;
  flex-wrap: wrap;
  width: 100%;
  margin: 10rpx 5rpx 10rpx 10rpx;
}
.list-item-title {
  font-size: 20px;
}
.list-item-content {
  margin-top: 10rpx;
  font-size: 14px;
  color: #d3d3d3;
}
.list-item-foot {
  margin-top: 15rpx;
  font-size: 14px;
}
.line {
  width: 100%;
  border: 1px solid #f1f5f7;
}